{
  "name": "Blokker",
  "description": "Blokker is the first practical social media site blocker that still lets you access essential features like direct messaging.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*", "http://www.instagram.com/*", "https://instagram.com/*", "http://instagram.com/*"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["blokker.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "blokker.html"
   },
  "manifest_version": 2
}